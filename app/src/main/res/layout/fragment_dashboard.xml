<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".ui.dashboard.DashboardFragment">

    <!-- Table Header -->
    <LinearLayout
        android:id="@+id/table_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/table_header_background"
        android:paddingVertical="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- X Header -->
        <LinearLayout
            android:id="@+id/header_x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_x"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp" />

            <ImageView
                android:id="@+id/sort_icon_x"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:tint="@color/border_color"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Y Header -->
        <LinearLayout
            android:id="@+id/header_y"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_y"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp" />

            <ImageView
                android:id="@+id/sort_icon_y"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:tint="@color/border_color"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Strength 1 Header -->
        <LinearLayout
            android:id="@+id/header_strength1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_strength1"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp" />

            <ImageView
                android:id="@+id/sort_icon_strength1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:tint="@color/border_color"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Strength 2 Header -->
        <LinearLayout
            android:id="@+id/header_strength2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_strength2"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp" />

            <ImageView
                android:id="@+id/sort_icon_strength2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:tint="@color/border_color"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Strength 3 Header -->
        <LinearLayout
            android:id="@+id/header_strength3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_strength3"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="4dp" />

            <ImageView
                android:id="@+id/sort_icon_strength3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/arrow_up_float"
                android:tint="@color/border_color"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Source Header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="Source"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="4dp" />

        <!-- Edit Header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/header_edit"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="4dp" />

        <!-- Delete Header -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/header_delete"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="4dp" />
    </LinearLayout>

    <!-- RecyclerView for Table Rows -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_coordinates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_coordinate_table_row"
        app:layout_constraintTop_toBottomOf="@id/table_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/text_empty_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No coordinates with signal strength available\n\nTap here to refresh data from API"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB for adding new coordinates -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_coordinate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add new coordinate"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="@color/tab_color"
        app:tint="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>