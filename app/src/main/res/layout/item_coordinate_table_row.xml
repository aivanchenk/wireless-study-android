<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/table_row_border"
    android:paddingVertical="8dp">

    <!-- X Column -->
    <TextView
        android:id="@+id/text_x"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Y Column -->
    <TextView
        android:id="@+id/text_y"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="11"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 1 Column -->
    <TextView
        android:id="@+id/text_strength1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="75"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 2 Column -->
    <TextView
        android:id="@+id/text_strength2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="82"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 3 Column -->
    <TextView
        android:id="@+id/text_strength3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="68"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Edit Button Column -->
    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/edit_coordinate"
        android:tint="@color/border_color"
        android:scaleType="fitCenter"
        android:padding="4dp" />

    <!-- Delete Button Column -->
    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete_coordinate"
        android:tint="#D32F2F"
        android:scaleType="fitCenter"
        android:padding="4dp" />

</LinearLayout>
