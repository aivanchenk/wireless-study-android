<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/table_row_border"
    android:paddingVertical="8dp">

    <!-- X Column -->
    <TextView
        android:id="@+id/text_x"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Y Column -->
    <TextView
        android:id="@+id/text_y"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="11"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 1 Column -->
    <TextView
        android:id="@+id/text_strength1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="75"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 2 Column -->
    <TextView
        android:id="@+id/text_strength2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="82"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Strength 3 Column -->
    <TextView
        android:id="@+id/text_strength3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="68"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="4dp" />

    <!-- Source Column - Checkmark for form entries -->
    <ImageView
        android:id="@+id/icon_source"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1.2"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/checkbox_on_background"
        android:scaleType="fitCenter"
        android:contentDescription="Source indicator"
        app:tint="@color/border_color"
        android:visibility="gone" />

    <!-- Edit Button Column -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/edit_coordinate"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="32dp"
        android:padding="4dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="@color/border_color"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

    <!-- Delete Button Column -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/delete_coordinate"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="32dp"
        android:padding="4dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="#D32F2F"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout>
